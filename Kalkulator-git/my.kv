                Button:
                    size_hint:None, None
                    pos:20,20
                    text:"Odejmowanie"
                    size:170,100
                    on_release:root.odejmowanie()
                Button:
                    size_hint:None, None
                    pos:210,20
                    text:"dzielenie"
                    size:170,100
                    on_release:root.dzielenie()
                Button:
                    size_hint:None, None
                    pos:210, 150

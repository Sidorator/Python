    ScreenManager:
        id:sm
        size: root.width, root.height
        Screen:
            name:"kalkulator"
            FloatLayout:
                size: root.width, root.height

                Label:
                    text:"podaj liczby"
                    pos:0,170
                    font_size:25
                    color:"blue"
                TextInput:
                    id:a
                    size:150,50
                    size_hint: None, None
                    pos:30,350
                    halgin:'centre'
                Label:
                    text:"liczba a:"
                    pos: -100, 120
                    color:"red"
                    font_size:25
                TextInput:
                    id:b
                    size:150,50
                    size_hint: None, None
                    pos:215,350
                Label:
                    text:"liczba b:"
                    pos:100,120
                    font_size:25
                    color:"green"
                Button:
                    size_hint:None, None
                    pos:20, 150
